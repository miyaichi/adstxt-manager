container_commands:
  01_write_health_config:
    command: |
      cat > /tmp/health_check.conf << 'EOF'
      location /health {
        proxy_pass http://localhost:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
      }
      EOF
    
  02_install_health_config:
    command: "mkdir -p /var/elasticbeanstalk/staging/nginx/conf.d/ && cp /tmp/health_check.conf /var/elasticbeanstalk/staging/nginx/conf.d/"