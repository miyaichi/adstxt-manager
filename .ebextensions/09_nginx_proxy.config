files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Serve static files directly through Nginx for better performance
      location / {
        root /var/app/current/backend/public;
        index index.html index.htm;
        try_files $uri $uri/ /index.html;
        
        # Enable gzip compression for better performance
        gzip on;
        gzip_comp_level 4;
        gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
      }
      
      # Forward API requests to Node.js backend
      location /api {
        proxy_pass http://localhost:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
      }
      
      # Forward status requests to Node.js backend
      location /status {
        proxy_pass http://localhost:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
      }
      
      # Disable cache for index.html for immediate updates
      location = /index.html {
        add_header Cache-Control "no-store, no-cache, must-revalidate";
        expires off;
      }

commands:
  01_reload_nginx:
    command: "service nginx reload || systemctl reload nginx"