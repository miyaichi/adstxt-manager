container_commands:
  01_install_backend_dependencies:
    command: "cd backend && npm ci"
  02_build_backend:
    command: "cd backend && npm run build"
  03_prepare_database_directory:
    command: "mkdir -p backend/db && chmod 777 backend/db"
  04_create_sqlite_database:
    command: "touch backend/db/database.sqlite && chmod 666 backend/db/database.sqlite"