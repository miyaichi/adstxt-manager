container_commands:
  01_install_backend_dependencies:
    command: "export NODE_OPTIONS=\"--max-old-space-size=2048\" && cd backend && npm ci --production=false"
  02_build_backend:
    command: "export NODE_OPTIONS=\"--max-old-space-size=2048\" && cd backend && npm run build"
  03_prepare_database_directory:
    command: "mkdir -p backend/db && chmod 777 backend/db"
  04_create_sqlite_database:
    command: "touch backend/db/database.sqlite && chmod 666 backend/db/database.sqlite"
  05_cleanup_node_modules:
    command: "rm -rf backend/node_modules && cd backend && npm ci --production=true"