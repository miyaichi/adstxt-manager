{
  "name": "adstxt-manager-backend",
  "version": "1.0.0",
  "description": "Backend for Ads.txt Manager application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/i18n/locales && cp -r src/i18n/locales dist/i18n/",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:postgres": "TEST_PGHOST=localhost TEST_PGPORT=5433 TEST_PGDATABASE=adstxt_test TEST_PGUSER=testuser TEST_PGPASSWORD=testpass jest",
    "test:postgres:docker": "docker compose up -d postgres-test && npm run test:postgres && docker compose stop postgres-test",
    "migrate": "ts-node src/db/migrations/run.ts",
    "migrate:sellers": "ts-node src/db/migrations/run_sellers_json.ts",
    "migrate:tokens": "ts-node src/db/migrations/run_token_fields.ts",
    "seed": "ts-node src/db/seeds/run.ts",
    "fetch-sellers-json": "node fetch-sellers-json.js"
  },
  "keywords": [
    "ads.txt",
    "publisher",
    "advertising"
  ],
  "author": "Yoshihiko Miyaichi",
  "license": "MIT",
  "dependencies": {
    "@adstxt-manager/ads-txt-validator": "file:../packages/ads-txt-validator",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "i18next": "^24.2.3",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.1",
    "psl": "^1.15.0",
    "stream-json": "^1.9.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.28",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
